@using Dominio
@model IEnumerable<Dominio.Proveedor>

<h1>Listado de proveedores</h1>

<table class="table">

    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Numero de contacto</th>
        <th>Direccion</th>
        <th>Descuento</th>
        <th>Modificar descuento</th>
    </tr>

    @foreach(Proveedor p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Nombre</td>
            <td>@p.NumeroContacto</td>
            <td>@p.Direccion</td>
            <td>@p.Descuento</td>
            <td>@Html.ActionLink("Modificar", "Update","Proveedor",new {id = p.Id})</td>
        </tr>
    }
</table>

